@model RegisterViewModel

<h2>Kullanıcı Ekle</h2>
<hr>

<form asp-controller="Kullanici" asp-action="Create" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KullaniciAd" class="form-label">Ad</label>
        <input asp-for="KullaniciAd" class="form-control">
        <span asp-validation-for="KullaniciAd" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KullaniciSoyad" class="form-label">Soyad</label>
        <input asp-for="KullaniciSoyad" class="form-control">
        <span asp-validation-for="KullaniciSoyad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Eposta</label>
        <input asp-for="Eposta" class="form-control">
        <span asp-validation-for="Eposta" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Şifre</label>
        <input asp-for="Password" class="form-control" type="password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>