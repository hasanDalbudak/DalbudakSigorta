@model Musteri

<h2>Müşteri Güncelleme</h2>
<hr>

<div class="row">

    <div class="col-8">
        
        <form asp-controller="Musteri" asp-action="Edit" method="post">
            <input type="hidden" asp-for="MusteriId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="MusteriAd" class="form-label">Müşteri Adı</label>
                <input asp-for="MusteriAd" class="form-control">
                <span asp-validation-for="MusteriAd" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="MusteriSoyad" class="form-label">Müşteri Soyadı</label>
                <input asp-for="MusteriSoyad" class="form-control">
                <span asp-validation-for="MusteriSoyad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Eposta" class="form-label">Eposta</label>
                <input asp-for="Eposta" class="form-control">
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TCKimlik" class="form-label">TC Kimlik</label>
                <input asp-for="TCKimlik" class="form-control">
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Il" class="form-label">İl</label>
                <input asp-for="Il" class="form-control">
                <span asp-validation-for="Il" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Ilce" class="form-label">İlçe</label>
                <input asp-for="Ilce" class="form-control">
                <span asp-validation-for="Ilce" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefon" class="form-label">Telefon</label>
                <input asp-for="Telefon" class="form-control">
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DogumTarihi" class="form-label">Doğum Tarihi</label>
                <input asp-for="DogumTarihi" class="form-control">
                <span asp-validation-for="DogumTarihi" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-secondary">Kaydet</button>
        </form>
    </div>

    <div class="col-4">
        <h4>Poliçeler</h4>
        <hr>
        <table class="table table-bordered my-3">
            <thead>
                <tr>
                    <th>Poliçe No</th>
                    <th>Durum</th>
                    <th>Tanzim Tarihi</th>
                    <th>Seçenekler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Policeler != null && Model.Policeler.Any())
                {
                    @foreach (var police in Model.Policeler)
                    {
                        <tr>
                            <td>@police.PoliceNo</td>
                            <td>@police.Status</td>
                            <td>@police.TanzimTarihi.ToShortDateString()</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Police" asp-route-id="@police.PoliceNo" class="btn btn-sm btn-primary">Düzenle</a>
                                <a asp-action="Delete" asp-controller="Police" asp-route-id="@police.PoliceNo" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">Bu müşteri için mevcut bir poliçe yok.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
