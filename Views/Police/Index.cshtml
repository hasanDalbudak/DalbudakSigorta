@model IEnumerable<DalbudakSigorta.Data.Police>

    <h2>Police Listesi</h2>
    <a asp-action="Create" class="btn btn-primary">Kayıt Ekle</a>
    <table class="table table-bordered my-3">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.First().PoliceNo)</th>
                <th>@Html.DisplayName("Müşteri Adı")</th>
                <th>@Html.DisplayNameFor(m => m.First().Status)</th>
                <th style="width: 150px;">Seçenekler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PoliceNo)</td>
                    <td>@(item.Musteri != null ? item.Musteri.MusteriAd : "N/A")</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PoliceNo" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.PoliceNo" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    